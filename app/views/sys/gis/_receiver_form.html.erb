<%= simple_form_for @receiver, url: request.url, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :name, label: 'სახელი, გვარი', input_html: { class: 'span6', autofocus: true } %>
  <%= f.input :email_on, label: 'ჩართვის ელ.ფოსტა' %>
  <%= f.input :email_off, label: 'გამორთვის ელ.ფოსტა' %>
  <%= f.input :mobile_on, label: 'ჩართვის მობილური' %>
  <%= f.input :mobile_off, label: 'გამორთვის მობილური' %>
  <%= f.input :active, label: false, as: :boolean, inline_label: 'აქტიური მიმღებია?' %>
  <div class="form-actions">
    <%= f.submit 'შენახვა', class: ['btn', 'btn-primary'] %>
    <%= link_to 'გაუქმება', sys_gis_receivers_url, class: 'btn' %>
  </div>
<% end %>