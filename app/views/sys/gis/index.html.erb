<style type="text/css">
h1 {
  font-size: 32px;
  color: white;
  padding: 32px 16px;
  margin: 0 0 32px 0;
  background: #ff88a9;
  text-align: center;
  border-bottom: 3px solid #c09054;
}
.section {
  border-bottom: 1px dotted #aaa; padding-bottom: 16px; margin-bottom: 16px;
}
</style>
<h1>GIS &mdash; მთავარი მენიუ</h1>

<%= role_content :sys_admin, :gis_viewer do %>
<div class="section">
  <h2>შეტყობინებები</h2>
  <div class="btn-toolbar">
    <%= link_to icon_text('envelope', t(:gis_logs)), sys_gis_messages_path, class: 'btn' %>
    <%= link_to icon_text('list', t(:gis_network_logs)), sys_gis_logs_path, class: 'btn' %>
  </div>
</div>
<div class="section">
  <h2>ქსელის ობიექტები</h2>
  <div class="btn-toolbar">
    <%= link_to icon_text('star', 'ქვესადგურის სექციები'), sys_sections_url, class: 'btn' %>
    <%= link_to icon_text('star', 'ფიდერები'), sys_fiders_url, class: 'btn' %>
    <%= link_to icon_text('star', 'ტრანსფორმატორები'), sys_transformators_path, class: 'btn' %>
  </div>
</div>
<div class="section">
  <h2>პარამეტრები</h2>
  <div class="btn-toolbar">
    <%= link_to icon_text('star', 'დაგზავნის სია'), sys_gis_receivers_url, class: 'btn' %>
  </div>
</div>
<% end %>