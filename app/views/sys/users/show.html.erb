<div class="page-header">
  <h2>მომხმარებლის თვისებები</h2>
</div>
<div class="btn-toolbar">
  <%= link_to icon_text('arrow-left', 'უკან დაბრუნება'), sys_users_url, class: 'btn' %>
</div>
<!-- confirm -->
<div class="row">
  <div class="span6">
    <div class="page-header">
      <h4>დასადასტურებელი აბონენტები</h4>
    </div>
    <div class="well">
      <% if @user.accnumbs.blank? %>
        სია ცარიელია
      <% else %>
        <% @user.accnumbs.each do |accnumb| %>
        <div>
          <code><%= accnumb %></code>
          <%= link_to icon('ok-sign'), sys_confirm_acc_url(id: @user.id, accnumb: accnumb), method: 'post', data: {confirm: 'ნამდვილად ადასტურებთ?'}%>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="span6">
    <div class="page-header">
      <h4>დადასტურებული აბონენტები</h4>
    </div>
    <div class="well">
      <% if @user.confirmed_accnumbs.blank? %>
        სია ცარიელია
      <% else %>
        <% @user.confirmed_accnumbs.each do |accnumb| %>
        <div>
          <code><%= accnumb %></code>
          <%= link_to icon('remove-sign'), sys_remove_acc_url(id: @user.id, accnumb: accnumb), method: 'delete', data: {confirm: 'ნამდვილად აუქმებთ?'}%>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>