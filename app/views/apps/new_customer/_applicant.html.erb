<h4>ინფორმაცია აპლიკანტზე</h4>
<hr>
<div class="btn-toolbar">
  <%= link_to icon_text('pencil', 'აპლიკანტის მონაცემების შეცვლა'), apps_new_customer_edit_path, class: 'btn' %>
</div>
<table class="table table-bordered table-striped">
  <tr>
    <th class="right" width="100">აპლიკანტი</th>
    <td class="muted">
      <span class="badge badge-inverse"><%= applicant.tin %></span>
      <%= applicant.name %>
    </td>
  </tr>
  <tr>
    <th class="right">მობილური</th>
    <td class="muted"><%= C12.format_mobile(applicant.mobile) %></td>
  </tr>
  <tr>
    <th class="right">ელ.ფოსტა</th>
    <td class="muted"><%= mail_to applicant.email %></td>
  </tr>
  <tr>
    <th class="right">მისამართი</th>
    <td class="muted"><%= applicant.address %></td>
  </tr>
</table>