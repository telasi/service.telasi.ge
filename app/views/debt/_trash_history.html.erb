<style type="text/css">
  .pagination a { padding: 0 12px; line-height: 32px; }
  .accnumb { font-size: 0.8em; }
  .decorated { padding-left: 24px !important; }
  .date { background: url(/assets/date.png) no-repeat 4px 50%; }
  .power { background: url(/assets/power.png) no-repeat 4px 50%; }
  .estimate { background: url(/assets/estimate.png) no-repeat 4px 50%; }
  .money { background: url(/assets/money.png) no-repeat 4px 50%; }
  .voucher { background: url(/assets/correction.png) no-repeat 4px 50%; }
  .subsidy { background: url(/assets/support.png) no-repeat 4px 50%; }
  .portion { background: url(/assets/portion.png) no-repeat 4px 50%; }
  .service { background: url(/assets/service.png) no-repeat 4px 50%; }
</style>
<div class="page-header">
  <h3>
    <%= @customer.custname.to_ka%> <span class="badge badge-success accnumb">აბ. №<%= @customer.accnumb.to_ka %></span>
  </h3>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th width="100">თარიღი</th>
      <th>ოპერაცია</th>
      <th width="100">ხარჯი (ლარი)</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="decorated date"><%= C12::KA.format_date(item.operdate, format: :short) %></td>
        <td><%= link_to item.operation.description.to_ka %></td>
        <td class="right"><%= C12.number_format item.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>