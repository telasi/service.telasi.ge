<style type="text/css">
  .logo { height: 75px; }
  .debt { padding: 0 0 32px 0; }
  .number { font-family: Courier; font-size: 18px; }
  .note { color: #aaa; padding: 50px 0 25px 0; text-align: center; }
</style>
<div class="row">
  <div class="span3">
    <div class="page-header">
      <h3>ძებნა</h3>
    </div>
    <%= form_tag(request.url, method: :get) do %>
      <p>
        <%= label_tag :accnumb, 'აბონენტის ნომერი:' %>
        <%= text_field_tag :accnumb, params[:accnumb], autofocus: true, class: 'span2' %>
      </p>
      <div class="form-actions">
        <%= button_tag icon_text('search', 'ძებნა', white: true), class: ['btn', 'btn-success'] %>
        <% if current_user and @customer %>
          <%= link_to icon_text('plus-sign', 'დამატება', white: true), add_customer_url(accnumb: params[:accnumb]), class: ['btn', 'btn-inverse'], method: 'post' %>
        <% end %>
      </div>
    <% end %>
    <% if current_user and current_user.accnumbs and current_user.accnumbs.any? %>
      <div class="page-header">
        <h4>თქვენი აბონენტები</h4>
      </div>
      <% current_user.accnumbs.each do |accnumb| %>
        <div style="padding: 3px 0;">
          <code><%= link_to accnumb, debt_url(accnumb: accnumb) %>
          <%= link_to '&times;'.html_safe, remove_customer_url(accnumb: accnumb), style: 'color: #D14;', method: :delete %></code>
        </div>
      <% end%>
    <% end %>
  </div>
  <div class="span9">
    <% if @customer %>
      <%= render partial: 'debt/customer' %>
    <% elsif @not_found %>
      <%= render partial: 'debt/not_found' %>
    <% else %>
      <%= render partial: 'debt/find_customer' %>
    <% end %>
  </div>
</div>
