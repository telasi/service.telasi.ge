<div class="row">
  <div class="span4">
    <div class="page-header">
      <h3>ძებნა</h3>
    </div>
    <%= form_tag(request.url, method: :get) do %>
      <p>
        <%= label_tag :accnumb, 'აბონენტის ნომერი:' %>
        <%= text_field_tag :accnumb, params[:accnumb], autofocus: true, class: 'span2' %>
      </p>
      <div class="form-actions">
        <%= submit_tag 'ძებნა', class: ['btn', 'btn-success'] %>
      </div>
    <% end %>
  </div>
  <div class="span8">
    <% if @customer %>
      <%= render partial: 'debt/customer' %>
    <% elsif @not_found %>
      აბონენტი ვერ მოიძებნა.
    <% else %>
      <%= render partial: 'debt/find_customer' %>
    <% end %>
  </div>
</div>
