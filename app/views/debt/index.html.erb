<div class="row">
  <div class="span3">
    <%= render partial: 'debt/search' %>
  </div>
  <div class="span9">
    <% if @customer %>
      <%= render partial: 'debt/customer' %>
    <% elsif @not_found %>
      <%= render partial: 'debt/not_found' %>
    <% else %>
      <%= render partial: 'debt/find_customer' %>
    <% end %>
  </div>
</div>
